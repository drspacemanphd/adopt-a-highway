{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "LitterImageSubmissions": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "BucketOwnerFullControl",
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              "ada-litter-image-submissions",
              {
                "Ref": "env"
              }
            ]
          ]
        },
        "LifecycleConfiguration": {
          "Rules": [
            {
              "ExpirationInDays": 180,
              "Status": "Enabled",
              "Transitions": [
                {
                  "StorageClass": "ONEZONE_IA",
                  "TransitionInDays": 90
                }
              ]
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true
        },
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::Sub": [
                  "arn:aws:lambda:${region}:${account}:function:ImageProcessor-${env}",
                  {
                    "account": { "Ref": "AWS::AccountId" },
                    "region": { "Ref": "AWS::Region" },
                    "env": { "Ref": "env" }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "LitterImageSubmissions"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "LitterImageSubmissions",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Join": [
            "-",
            [
              "LitterImageSubmissions",
              {
                "Ref": "env"
              },
              "Bucket",
              "Arn"
            ]
          ]
        }
      }
    }
  },
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"7.6.4\",\"stackType\":\"custom-customCloudformation\",\"metadata\":{}}"
}