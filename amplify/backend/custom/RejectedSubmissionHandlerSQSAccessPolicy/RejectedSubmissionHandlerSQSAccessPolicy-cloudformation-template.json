{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "customRejectedSubmissionsQueueArn": {
      "Type": "String"
    },
    "functionRejectedSubmissionHandlerName": {
      "Type": "String"
    },
    "functionRejectedSubmissionHandlerLambdaExecutionRole": {
      "Type": "String"
    }
  },
  "Resources": {
    "SQSAccessPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Fn::Sub": "${functionRejectedSubmissionHandlerName}-sqs-access-policy-${env}"
        },
        "Roles": [
          {
            "Ref": "functionRejectedSubmissionHandlerLambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sqs:ReceiveMessage",
                "sqs:DeleteMessage",
                "sqs:GetQueueAttributes"
              ],
              "Resource": {
                "Fn::Sub": "${customRejectedSubmissionsQueueArn}"
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "Arn": {
      "Value": {
        "Ref": "SQSAccessPolicy"
      }
    }
  },
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"7.6.4\",\"stackType\":\"custom-customCloudformation\",\"metadata\":{}}"
}